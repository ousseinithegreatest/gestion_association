@model gestion_assoc.Models.UpdateAssociationViewModel


@{
    ViewData["Title"] = "Infos association";
}

<!-- Start content -->
<div class="content">
    <div class="wraper container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="bg-light text-center">
                    <div class="bg-picture text-center" style="background-image:url('images/big/bg.jpg')"></div>
                    <div class="profile-info-name">
                        <!-- <img src="images/avatar-1.jpg" class="thumb-lg img-circle img-thumbnail" alt="profile-image"> -->
                        <h3 class="text-dark mb-auto">@Model.Nom</h3>
                    </div>
                </div>
                <!--/ meta -->
            </div>
        </div>
        <div class="row user-tabs">
            <div class="col-lg-6 col-md-9 col-sm-9">
                <ul class="nav nav-tabs tabs">
                    <li class="active tab">
                        <a href="#home-2" data-toggle="tab" aria-expanded="false" class="active">
                            <span class="visible-xs"><i class="fa fa-home"></i></span>
                            <span class="hidden-xs">Infos</span>
                        </a>
                    </li>
                    <li class="tab">
                        <a href="#profile-2" data-toggle="tab" aria-expanded="false">
                            <span class="visible-xs"><i class="fa fa-user"></i></span>
                            <span class="hidden-xs">Activité</span>
                        </a>
                    </li>
                    <li class="tab">
                        <a href="#settings-2" data-toggle="tab" aria-expanded="false">
                            <span class="visible-xs"><i class="fa fa-cog"></i></span>
                            <span class="hidden-xs">Paramètres</span>
                        </a>
                    </li>
                    <div class="indicator"></div>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <div class="tab-content profile-tab-content">
                    <div class="tab-pane active" id="home-2">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Personal-Information -->
                                <div class="panel panel-default panel-fill">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Informations de l'association</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="about-info-p">
                                            <strong>Nom de l'association</strong>
                                            <br />
                                            <p class="text-muted">@Model.Nom</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Téléphone 1</strong>
                                            <br />
                                            <p class="text-muted">@Model.Tel_1</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Téléphone 2</strong>
                                            <br />
                                            <p class="text-muted">@Model.Tel_2</p>
                                        </div>
                                        <div class="about-info-p">
                                            <strong>Email</strong>
                                            <br />
                                            <p class="text-muted">@Model.Email</p>
                                        </div>
                                        <div class="about-info-p m-b-0">
                                            <strong>Adresse</strong>
                                            <br />
                                            <p class="text-muted">@Model.Adresse</p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Personal-Information -->

                            </div>

                        </div>
                    </div>




                    <div class="tab-pane" id="profile-2">
                        <!-- Personal-Information -->
                        <div class="panel panel-default panel-fill">

                            <div class="panel-body">
                                <div class="timeline-2">
                                    <div class="time-item">
                                        <div class="item-info">
                                            <p><a href="" class="text-info">Sophie Diop</a> a participer à la cotisation de l'association <a href="#" class="text-success">Tandarma</a>.</p>
                                            <!-- <p><em>"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam laoreet tellus ut tincidunt euismod. "</em></p> -->
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- Personal-Information -->
                    </div>



                    <div class="tab-pane" id="settings-2">
                        <!-- Personal-Information -->
                        <div class="panel panel-default panel-fill">
                            <div class="panel-heading">
                                <h3 class="panel-title">Modifier association</h3>
                            </div>
                            <div class="panel-body">
                                <form class="form-horizontal" role="form" method="post" action="Read">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="id">Id</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" id="id" asp-for="Id" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="nom">Nom</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" id="nom" placeholder="Saisir le nom de l'association" asp-for="Nom">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="date_crea">Date de création</label>
                                        <div class="col-md-10">
                                            <input type="date" class="form-control" id="date_crea" asp-for="Annee_Creation">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="tel1">Téléphone 1</label>
                                        <div class="col-md-10">
                                            <input type="tel" class="form-control" id="tel1" placeholder="Saisir le numéro de téléphone 1" asp-for="Tel_1">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="tel2">Téléphone 2</label>
                                        <div class="col-md-10">
                                            <input type="tel" class="form-control" id="tel3" placeholder="Saisir le numéro de téléphone 2" asp-for="Tel_2">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="email">Email</label>
                                        <div class="col-md-10">
                                            <input type="email" class="form-control" id="email" placeholder="Saisir le numéro l'email' de l'association" asp-for="Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="adrr">Adresse</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" id="adrr" placeholder="Saisir l'adresse de l'association" asp-for="Adresse">
                                        </div>
                                    </div>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col text-center">
                                                <button type="submit" class="btn btn-primary btn-custom waves-effect waves-light m-b-5 btn-lg">Modifier</button>
                                                <button type="submit" class="btn btn-danger btn-custom waves-effect waves-light m-b-5 btn-lg" asp-action="Delete" asp-controller="Association">Supprimer</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <!-- Personal-Information -->
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- container -->

</div> <!-- content -->