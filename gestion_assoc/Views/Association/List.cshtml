@model List<gestion_assoc.Models.Domain.Association>


@{
    ViewData["Title"] = "Liste des associations";
}



<div class="container">

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <h4 class="pull-left page-title">Association</h4>
            <ol class="breadcrumb pull-right">
                <li><a href="#">Moltran</a></li>
                <li><a href="#">Association</a></li>
                <li class="active">Liste des associations</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-heading">
                        <h3 class="panel-title">Liste des associations</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Date de création</th>
                                            <th>Téléphone 1</th>
                                            <th>Téléphone 2</th>
                                            <th>Email</th>
                                            <th>Adresse</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>


                                    <tbody>

                                        @foreach (var association in Model)
                                        {
                                            <tr>
                                                <td>@association.Id</td>
                                                <td>@association.Nom</td>
                                                <td>@association.Annee_Creation</td>
                                                <td>@association.Tel_1</td>
                                                <td>@association.Tel_2</td>
                                                <td>@association.Email</td>
                                                <td>@association.Adresse</td>
                                                
                                                <td class="actions">
                                                    <a href="~/Association/Read/@association.Id" ><i class="fa fa-eye text-success"></i></a>
                                                    <a href="~/Association/Read/@association.Id" class=""><i class="fa fa-pencil text-primary"></i></a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div> <!-- End Row -->


    </div>
